<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:state_pressed="true">
            <solid android:color="@color/md_theme_light_onPrimaryContainer"/>
            <corners android:radius="20dp"/>
            <stroke android:width="3dp" android:color="@color/md_theme_light_onPrimaryContainer"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_light_surface"/>
            <corners android:radius="20dp" />
            <stroke android:width="3dp" android:color="@color/md_theme_light_onPrimaryContainer" />
        </shape>
    </item>
</selector>